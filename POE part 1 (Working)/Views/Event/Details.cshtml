@model EventEaseBookingSystem.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="card shadow-lg border-0 rounded-4 p-4 bg-white">
    <h2 class="text-primary fw-semibold mb-4">Event Details</h2>

    <div class="mb-3">
        <h4 class="fw-bold text-dark">@Model.EventName</h4>
        <p class="mb-1"><strong class="text-primary">Date:</strong> @Model.EventDate.ToShortDateString()</p>
        <p class="mb-1"><strong class="text-primary">Venue:</strong> @Model.Venue?.VenueName</p>
    </div>

    <div class="d-flex gap-3 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-outline-primary px-4">Edit</a>
        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
    </div>
</div>
